<mvc:View
    controllerName="mikelazqueta.mikelazqueta.controller.EmployeeDetails"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
<Page id="_IDGenPage1" title="{i18n>employeeDetails}">

<Panel id="_IDGenPanel1">
<FlexBox id="_IDGenFlexBox1" height="65px" alignItems="Center" justifyContent="Center">
<items>
<Text id="_IDGenText2" text="{jsonEmployees>LastName}, {jsonEmployees>FirstName}" class="boldText"></Text>
</items>
</FlexBox>

<FlexBox id="_IDGenFlexBox2" height="65px" alignItems="Start" justifyContent="SpaceBetween">
<items>
    <VBox id="_IDGenVBox1" >
        <Text id="_IDGenText3" text="{i18n>EmployeeID}" class="boldText sapUiTinyMarginEnd"></Text>
        <Text id="_IDGenText4" text="{jsonEmployees>EmployeeID}"></Text>
    </VBox>
        <VBox id="_IDGenVBox2" >
        <Text id="_IDGenText5" text="{i18n>Title}" class="boldText"></Text>
        <Text id="_IDGenText6" text="{jsonEmployees>Title}"></Text>
    </VBox>
</items>
</FlexBox>

<FlexBox id="_IDGenFlexBox3" alignItems="Start">
    <items>
    <HBox id="_IDGenHBox1" >
            <Text id="_IDGenText7" text="{i18n>country}" class="boldText sapUiTinyMarginEnd"></Text> 
           <Text id="_IDGenText8" text="{jsonEmployees>Country}"></Text>
           <layoutData>
           <FlexItemData id="_IDGenFlexItemData1" growFactor="3" ></FlexItemData>
           </layoutData>
    </HBox>
        <HBox id="_IDGenHBox2" >
            <Text id="_IDGenText9" text="{i18n>city}" class="boldText sapUiTinyMarginEnd"></Text> 
           <Text id="_IDGenText10" text="{jsonEmployees>City}"></Text>
                    <layoutData>
           <FlexItemData id="_IDGenFlexItemData2" growFactor="2" ></FlexItemData>
           </layoutData>
    </HBox>
    <FlexBox id="_IDGenFlexBox4" direction="Row" alignItems="Start" >
            <HBox id="_IDGenHBox3" >
            <Text id="_IDGenText11" text="{i18n>postalcode}" class="boldText sapUiTinyMarginEnd"></Text> 
           <Text id="_IDGenText12" text="{jsonEmployees>PostalCode}"></Text>
                    <layoutData>
           <FlexItemData id="_IDGenFlexItemData3" growFactor="1" ></FlexItemData>
           </layoutData>
    </HBox>
    </FlexBox>
    </items>
</FlexBox>

</Panel>
<Panel id="_IDGenPanel2" class="sapUiSizeCompact" backgroundDesign="Transparent">
<headerToolbar>
<Toolbar id="_IDGenToolbar1" >
    <Title id="_IDGenTitle1" text="{i18n>incidence} {= ${jsonEmployees>Country} !=='US' ? ${i18n>europe} : ${i18n>US}}"></Title>
<ToolbarSpacer id="_IDGenToolbarSpacer1" ></ToolbarSpacer>
<Button id="_IDGenButton1" text="{i18n>createIncidence}" press="crearIncidencia"></Button>
</Toolbar>
</headerToolbar>
<Panel id="tableIncidence" class="sapUiNoContentPadding" backgroundDesign="Transparent"></Panel>
</Panel>
</Page>
</mvc:View>