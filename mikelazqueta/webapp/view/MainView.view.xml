<mvc:View
    controllerName="mikelazqueta.mikelazqueta.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
               <content>
               <HBox id="hbox" class="hbox">
                <Label id="labelEmployees" text="{i18n>LabelEmployee}" class="sapUiSmallMargin etiqueta"></Label>
                <Input id="inputEmployees" value="{/EmployeeID}" maxLength="6" width="200px" class="sapUiSmallMarginEnd" />
                <Label id="labelCountry" visible="true" labelFor="slCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin"  />
                <Select id="slCountry" selectedKey="{/CountryKey}" forceSelection="false" visible="true" items="{/ListCountry}">
                    <items>
                        <core:Item id="x1" key="{Key}" text="{Text}"/>

                    </items>
                </Select>
                <Button id="btonFilter" text="Filtrar" icon="sap-icon://search" press="filtrar"/>
                <Button id="clearFilter" text="Limpiar Filtro" icon="sap-icon://clear-filter" press="clearfiltrar"/>
                </HBox>
                <HBox id="hbox2" class="hbox">
                <Panel id="panelEmpleados">
                    <Table id="tableEmployee" items="{/Employees}">
                    <columns>
                        <Column id="_IDGenColumn1" >
                            <header>
                                <Label id="_IDGenLabel1" text="{i18n>tableId}"/>
                            </header>
                        </Column>
                        <Column id="_IDGenColumn2" >
                            <header>
                                <Label id="_IDGenLabel2" text="{i18n>tableName}"/>
                            </header>
                        </Column>
                        <Column id="_IDGenColumn3" >
                            <header>
                                <Label id="_IDGenLabel3" text="{i18n>tableCountry}"/>
                            </header>
                        </Column>
                        <Column id="_IDGenColumn4" >
                            <header>
                                <Label id="_IDGenLabel4" text="{i18n>tableCity}"/>
                            </header>
                        </Column>
                    </columns>
                        <items>
                        <ColumnListItem id="_IDGenColumnListItem1" type="Active" press="mostrarCP">
                            <cells>
                            <Label id="_IDGenLabel5" text="{EmployeeID}"/>
                            <Label id="_IDGenLabel6" text="{LastName}, {FirstName}"/>
                            <Label id="_IDGenLabel7" text="{Country}"/>
                            <Label id="_IDGenLabel8" text="{City}"/>
                            </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </Panel>
               </HBox>
               </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
